<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BukuAdapter">



    <TextView
        android:id="@+id/t_nama"
        android:layout_width="410dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginStart="304dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_delete" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="@+id/t_nama"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toEndOf="@+id/image_edit"
        app:layout_constraintTop_toTopOf="@+id/t_nama" />


</androidx.constraintlayout.widget.ConstraintLayout>